# mod tuşu atama
set $mod Mod4
set $ALT Mod1

#pencere hareketi
floating_modifier $ALT

# alacritty açma
bindsym $ALT+F1 exec alacritty

# pencere kapatma
bindsym $ALT+F4 kill

# pencere yerleşimi yatay
default_orientation horizontal
workspace_layout tabbed

# pencere renk ayarları 
client.focused        #0F0F0F #7FB256 #F5F5FF
client.focused_inactive    #0F0F0F #7FB256 #E5E5E5
client.unfocused    #0F0F0F #5697B2 #E5E5E5
client.urgent        #0F0F0F #BC9B54 #E5E5E5

# başlangıç uygulamaları
exec --no-startup-id firefox
exec --no-startup-id alacritty


